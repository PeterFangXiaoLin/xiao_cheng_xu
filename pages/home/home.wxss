.home {
  margin: 0 20rpx;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: #fff;
  overflow-y: auto;
}

.title-box {
  display: flex;
  height: 60rpx;
  margin: 20rpx;
}

.hello {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
}
.login {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.ipt {
  width: calc(100% - 240rpx);
  height: 60rpx;
  display: flex;
  background-color: lightgray;
  border-radius: 30rpx;
  padding: 0 10rpx;
}

.img {
  width: 60rpx;
  height: 60rpx;
  align-items: center;
}

.research {
  height: 60rpx;
  line-height: 60rpx;
  align-items: center;
  margin-left: 10rpx;
}
.i {
  height: 60rpx;
}

.banner{
  width: 100%;
  height: 500rpx;
}
.banner swiper{
  height: 500rpx;
  width: 100%;
}

.banner image{
  width: 100%;
  height: 100%;
}

.home-product {
  width: 100%;
  overflow-y: auto;
  background-color: #fff;
}

.product {
  display: flex;
  flex-wrap: wrap;
  margin-top: 50rpx;
}

.pro-item {
  width: calc(50% - 20rpx + 20rpx / 2);
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}

.pro-item:nth-child(2n) {
  margin-right: 0;
}